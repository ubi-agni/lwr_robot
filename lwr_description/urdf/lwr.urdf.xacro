<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
		 xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
		 xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

  <xacro:include filename="$(find lwr_description)/urdf/util.urdf.xacro"/>

  <xacro:property name="arm_elem_base_mass" value="1.2"/>
  <xacro:property name="arm_elem_link_mass" value="2.0"/>
  <xacro:property name="arm_elem_ball_link_mass" value="1.0"/>
  <xacro:property name="arm_elem_end_link_mass" value="0.2"/>
  <xacro:property name="safety_controller_k_pos" value="100" />
  <xacro:property name="safety_controller_k_vel" value="2" />
  <xacro:property name="joint_damping_factor" value="1.0" />

  <xacro:property name="arm_velocity_scale_factor" value="1"/>

  <xacro:macro name="kuka_lwr_arm" params="name">

    <link name="${name}arm_base_link">
      <inertial>
        <mass value="${arm_elem_base_mass}"/>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <cylinder_inertia_def radius="0.06" length="0.11"
                              mass="${arm_elem_base_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh scale="100 100 100" 
					 filename="package://lwr_description/meshes/arm_base.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_base_convex.stl" scale="0.9 0.9 0.9"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_base_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_0_joint" type="revolute">
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * pi / 180}" upper="${170 * pi / 180}"
             effort="176" velocity="${arm_velocity_scale_factor * 100 * pi / 180}" />
      <safety_controller soft_lower_limit="${-168 * pi / 180}"
                         soft_upper_limit="${168 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*5.0}"/>
      <parent link="${name}arm_base_link"/>
      <child link="${name}arm_1_link"/>
    </joint>
    <gazebo reference="${name}arm_0_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_0_trans" type="SimpleTransmission">
      <actuator name="${name}arm_0_motor"/>
      <joint name="${name}arm_0_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_1_link">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0 0.130"/>
        <cuboid_inertia_def length="0.260" width="0.06" height="0.12"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh scale="100 100 100"  filename="package://lwr_description/meshes/arm_segment_a.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_segment_a_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_1_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_1_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${-120 * pi / 180}" upper="${120 * pi / 180}"
             effort="176" velocity="${arm_velocity_scale_factor * 110 * pi / 180}" />
      <safety_controller soft_lower_limit="${-118 * pi / 180}"
                         soft_upper_limit="${118 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*5.0}"/>
      <parent link="${name}arm_1_link"/>
      <child link="${name}arm_2_link"/>
    </joint>
    <gazebo reference="${name}arm_1_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_1_trans" type="pr2_mechanism_model/SimpleTransmission">
      <actuator name="${name}arm_1_motor"/>
      <joint name="${name}arm_1_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_2_link">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 -0.06 ${0.130 - 0.06}"/>
        <cuboid_inertia_def length="0.260" width="0.06" height="0.12"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.2" rpy="${pi} 0 ${pi}"/>
        <geometry>
          <mesh scale="100 100 100"
					 filename="package://lwr_description/meshes/arm_segment_b.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.2" rpy="${pi} 0 ${pi}"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_segment_b_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_2_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_2_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * pi / 180}" upper="${170 * pi / 180}"
             effort="100" velocity="${arm_velocity_scale_factor * 130 * pi / 180}" />
      <safety_controller soft_lower_limit="${-168 * pi / 180}"
                         soft_upper_limit="${168 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*3.0}"/>
      <parent link="${name}arm_2_link"/>
      <child link="${name}arm_3_link"/>
    </joint>
    <gazebo reference="${name}arm_2_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_2_trans" type="SimpleTransmission">
      <actuator name="${name}arm_2_motor"/>
      <joint name="${name}arm_2_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_3_link">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 -0.06 0.130"/>
        <cuboid_inertia_def length="0.260" width="0.06" height="0.12"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh scale="100 100 100" 
					 filename="package://lwr_description/meshes/arm_segment_a.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_segment_a_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_3_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_3_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-120 * pi / 180}" upper="${120 * pi / 180}"
             effort="100" velocity="${arm_velocity_scale_factor * 130 * pi / 180}" />
      <safety_controller soft_lower_limit="${-118 * pi / 180}"
                         soft_upper_limit="${118 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*3.0}"/>
      <parent link="${name}arm_3_link"/>
      <child link="${name}arm_4_link"/>
    </joint>
    <gazebo reference="${name}arm_3_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_3_trans" type="SimpleTransmission">
      <actuator name="${name}arm_3_motor"/>
      <joint name="${name}arm_3_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_4_link">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0.06 ${0.130 - 0.06}"/>
        <cuboid_inertia_def length="0.260" width="0.06" height="0.12"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.2" rpy="0 ${pi} ${pi}"/>
        <geometry>
          <mesh scale="100 100 100" 
					 filename="package://lwr_description/meshes/arm_segment_b.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.2" rpy="0 ${pi} ${pi}"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_segment_b_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_4_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_4_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * pi / 180}" upper="${170 * pi / 180}"
             effort="100" velocity="${arm_velocity_scale_factor * 130 * pi / 180}" />
      <safety_controller soft_lower_limit="${-168 * pi / 180}"
                         soft_upper_limit="${168 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*1.0}"/>
      <parent link="${name}arm_4_link"/>
      <child link="${name}arm_5_link"/>
    </joint>
    <gazebo reference="${name}arm_4_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_4_trans" type="SimpleTransmission">
      <actuator name="${name}arm_4_motor"/>
      <joint name="${name}arm_4_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_5_link">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0 0.124"/>
        <cuboid_inertia_def length="0.248" width="0.06" height="0.12"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry name="${name}arm_5_geom">
          <mesh scale="100 100 100" 
					 filename="package://lwr_description/meshes/arm_segment_last.dae"/>
        </geometry>
        <material name="Orange"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_segment_last_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_5_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_5_joint" type="revolute">
      <origin xyz="0 0 0.19" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${-120 * pi / 180}" upper="${120 * pi / 180}"
             effort="30" velocity="${arm_velocity_scale_factor * 180 * pi / 180}" />
      <safety_controller soft_lower_limit="${-118 * pi / 180}"
                         soft_upper_limit="${118 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*1.0}"/>
      <parent link="${name}arm_5_link"/>
      <child link="${name}arm_6_link"/>
    </joint>
    <gazebo reference="${name}arm_5_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_5_trans" type="SimpleTransmission">
      <actuator name="${name}arm_5_motor"/>
      <joint name="${name}arm_5_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


    <link name="${name}arm_6_link">
      <inertial>
        <mass value="${arm_elem_ball_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0 0.0"/>
        <cuboid_inertia_def length="0.125" width="0.125" height="0.125"
                            mass="${arm_elem_ball_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh scale="100 100 100" 
					 filename="package://lwr_description/meshes/arm_wrist.dae"/>
        </geometry>
        <material name="Grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_wrist_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_6_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_6_joint" type="revolute">
      <origin xyz="0 0 0.078" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * pi / 180}" upper="${170 * pi / 180}"
             effort="30" velocity="${arm_velocity_scale_factor * 180 * pi / 180}" />
      <safety_controller soft_lower_limit="${-168 * pi / 180}"
                         soft_upper_limit="${168 * pi / 180}"
                         k_position="${safety_controller_k_pos}"
                         k_velocity="${safety_controller_k_vel}"/>
      <dynamics damping="${joint_damping_factor*1.0}"/>
      <parent link="${name}arm_6_link"/>
      <child link="${name}arm_7_link"/>
    </joint>
    <gazebo reference="${name}arm_6_joint">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>

    <transmission name="${name}arm_6_trans" type="SimpleTransmission">
      <actuator name="${name}arm_6_motor"/>
      <joint name="${name}arm_6_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>
    

    <link name="${name}arm_7_link">
      <inertial>
        <mass value="${arm_elem_end_link_mass}"/>
        <origin xyz="0 0 0"/>
        <cuboid_inertia_def length="0.02" width="0.06" height="0.06"
                            mass="${arm_elem_end_link_mass}"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh scale="100 100 100" 
                filename="package://lwr_description/meshes/arm_flanche.dae"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_description/meshes/convex/arm_flanche_convex.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}arm_7_link">
      <!--<material value="kuka-lwr.material"/>-->
    </gazebo>

    <joint name="${name}arm_hand_fixed_joint" type="fixed">
      <parent link="${name}arm_7_link"/>
      <child link="${name}tool_mount"/>
    </joint>

    <link name="${name}tool_mount" />

  </xacro:macro>

</robot>
